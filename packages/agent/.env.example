# =============================================================================
# Aevoy Agent Server — Environment Variables
# =============================================================================
# Copy to .env: cp .env.example .env
# Then fill in all values.
# =============================================================================

# --- Required ---
ENCRYPTION_KEY=               # openssl rand -hex 32
AGENT_WEBHOOK_SECRET=         # Must match Cloudflare worker + web app
NEXT_PUBLIC_SUPABASE_URL=https://eawoquqgfndmphogwjeu.supabase.co
SUPABASE_SERVICE_ROLE_KEY=    # From Supabase dashboard > Settings > API

# --- AI (at least one required) ---
GROQ_API_KEY=                 # console.groq.com (fastest, primary)
DEEPSEEK_API_KEY=             # platform.deepseek.com
ANTHROPIC_API_KEY=            # console.anthropic.com
GOOGLE_API_KEY=               # aistudio.google.com
KIMI_API_KEY=                 # platform.moonshot.cn

# --- Browser Automation ---
BROWSERBASE_API_KEY=          # browserbase.com
BROWSERBASE_PROJECT_ID=       # browserbase.com

# --- Voice/SMS ---
TWILIO_ACCOUNT_SID=           # twilio.com/console
TWILIO_AUTH_TOKEN=            # twilio.com/console
TWILIO_PHONE_NUMBER=          # Purchased Twilio number (E.164 format, e.g. +1234567890)
TWILIO_API_KEY_SID=           # Twilio API Key SID (SK...) — more secure than Auth Token
TWILIO_API_KEY_SECRET=        # Twilio API Key Secret

# --- Email ---
RESEND_API_KEY=               # resend.com

# --- IMAP Inbox (for email polling) ---
AGENT_INBOX_EMAIL=            # Gmail address receiving ImprovMX forwards
AGENT_INBOX_PASSWORD=         # Gmail App Password (16 char)

# --- Google OAuth (for API skills) ---
GOOGLE_OAUTH_CLIENT_ID=       # console.cloud.google.com
GOOGLE_OAUTH_CLIENT_SECRET=   # console.cloud.google.com

# --- Microsoft OAuth (for API skills) ---
MICROSOFT_CLIENT_ID=          # portal.azure.com
MICROSOFT_CLIENT_SECRET=      # portal.azure.com

# --- Server ---
NODE_ENV=production
AGENT_PORT=3001
AGENT_URL=https://your-agent.up.railway.app
AGENT_WEBHOOK_BASE_URL=https://your-agent.up.railway.app
ALLOWED_ORIGINS=https://aevoy.com,https://www.aevoy.com

# --- Stripe (billing) ---
STRIPE_WEBHOOK_SECRET=        # Stripe webhook signing secret

# --- Optional ---
OLLAMA_HOST=
AI_MOCK_MODE=false
TEST_MODE=false
